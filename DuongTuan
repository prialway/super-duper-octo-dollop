-- Auto Summon Script
local summonButton = script.Parent.SummonButton -- Nút Summon
local gems = game.Players.LocalPlayer.leaderstats.Gems -- Số Gems của người chơi

summonButton.MouseButton1Click:Connect(function()
    local summonMode = script.Parent.SummonMode.Text -- Lấy mode summon từ UI
    local banner = script.Parent.SummonBanner.Text -- Lấy banner để summon
    local unit = script.Parent.SummonUnit.Text -- Lấy unit để summon

    if gems.Value >= 50 then -- Kiểm tra xem người chơi có đủ Gems không
        game.ReplicatedStorage.RemoteEvents.Summon:FireServer(banner, unit)
        print("Summon thành công cho "..unit)
    else
        print("Không đủ Gems!")
    end
end)
-- Auto Fuse Script
local fuseButton = script.Parent.FuseButton -- Nút Fuse
local fuseSlot = script.Parent.FuseSlot.Text -- Slot để fuse
local fuseRarity = script.Parent.FuseRarity.Text -- Rarity để fuse

fuseButton.MouseButton1Click:Connect(function()
    game.ReplicatedStorage.RemoteEvents.Fuse:FireServer(fuseSlot, fuseRarity)
    print("Fuse thành công vào slot "..fuseSlot)
end)
local macro = {}

function recordMacro(action)
    table.insert(macro, action)
end

function playMacro()
    for _, action in pairs(macro) do
        -- Thực hiện các hành động được ghi lại
    end
end
local HttpService = game:GetService("HttpService")

function sendWebhook(url, message)
    local data = {
        ["content"] = message
    }
    local jsonData = HttpService:JSONEncode(data)
    
    HttpService:PostAsync(url, jsonData, Enum.HttpContentType.ApplicationJson)
end
